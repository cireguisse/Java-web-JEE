<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Ctrl</servlet-name>
        <servlet-class>Controller.Ctrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LireMessage</servlet-name>
        <jsp-file>/JSP/lirefichier.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>SaisirMessage</servlet-name>
        <jsp-file>/JSP/SaisireMessage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ListeSuprimer</servlet-name>
        <jsp-file>/JSP/Supprimer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ConfimrSuppri</servlet-name>
        <jsp-file>/JSP/ConfirmSupprimer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlSup</servlet-name>
        <servlet-class>Controller.CtrlSupprimer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifMsg</servlet-name>
        <jsp-file>/JSP/ModiferMsg.jsp</jsp-file>
    </servlet>
    <servlet>
        <description>cette controlleur permet de confirmer la supprimer desligne selectionner dans la BD</description>
        <servlet-name>CtrlSupConfirm</servlet-name>
        <servlet-class>Controller.CtrlSupprimerConfirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlModifMsg</servlet-name>
        <servlet-class>Controller.MiseAjour</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmModifMsg</servlet-name>
        <jsp-file>/JSP/ConfirmModifMsg.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlConfirmModifMsg</servlet-name>
        <servlet-class>Controller.CtrlConfirmMiseajour</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JspFinModifMsg</servlet-name>
        <jsp-file>/JSP/FinModifcation.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaisirMessage</servlet-name>
        <url-pattern>/saisir_mon_message</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ctrl</servlet-name>
        <url-pattern>/Controlleur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LireMessage</servlet-name>
        <url-pattern>/liremessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeSuprimer</servlet-name>
        <url-pattern>/listSuppr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfimrSuppri</servlet-name>
        <url-pattern>/confirm_Suppr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlSup</servlet-name>
        <url-pattern>/ctrlsup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifMsg</servlet-name>
        <url-pattern>/modifMsg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlSupConfirm</servlet-name>
        <url-pattern>/confirmSup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlModifMsg</servlet-name>
        <url-pattern>/ctrlmodifMsg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmModifMsg</servlet-name>
        <url-pattern>/confirmModiMsg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlConfirmModifMsg</servlet-name>
        <url-pattern>/confirmMAJ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JspFinModifMsg</servlet-name>
        <url-pattern>/finmodifmsg</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
